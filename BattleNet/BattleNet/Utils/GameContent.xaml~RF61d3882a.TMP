<UserControl x:Class="BattleNet.Utils.GameContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleNet.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="860">
    <Grid>
        <Image Width="860" Height="260" Source="{Binding CurrentGame.IconPath}" VerticalAlignment="Top"></Image>
    </Grid>
</UserControl>
